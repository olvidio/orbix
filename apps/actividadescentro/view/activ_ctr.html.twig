	display:inline;
	float:left;
	height:60%;
	position:absolute;
	z-index:10;
	overflow: scroll;
	width: 17em;
	background-color: darkgray;
}
div.ctr table {
	width: 100%;
	background-color:wheat;
}
div.ctr td.cabecera {
	text-align: center;
}
p.tres:hover {
	background-color:black;
}
