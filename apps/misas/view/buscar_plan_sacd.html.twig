<script>
    fnjs_ver_plan_sacd = function () {
        let id_sacd = $('#id_sacd').val();
        if (id_sacd) {
            let url = '{{ url_ver_plan_sacd }}';
    	    var periodo=$('#periodo').val();
    	    var empiezamax=$('#empiezamax').val();
    	    var empiezamin=$('#empiezamin').val();

            let parametros = 'id_sacd=' + id_sacd + '&periodo=' + periodo + '&empiezamin=' + empiezamin + '&empiezamax=' + empiezamax + '{{ h_plan_sacd|raw }}';
            $.ajax({
                url: url,
                type: 'post',
                data: parametros,
                dataType: 'html'
            })
                .done(function (rta_txt) {
                    $('#div_cuadricula').html(rta_txt);
                });
        }
    }
	$(document).ready($('#periodo').change(function(){funjs_activar_fecha();fnjs_ver_plan_sacd();}));
	$(document).ready($('#empiezamin').change(function(){funjs_activar_fecha();fnjs_ver_plan_sacd();}));
	$(document).ready($('#empiezamax').change(function(){funjs_activar_fecha();fnjs_ver_plan_sacd();}));
</script>
