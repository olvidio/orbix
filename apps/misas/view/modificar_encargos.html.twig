<div id="div_select_zona">
    <form id="frm_zona_ctr" name="frm_zona_ctr" action="" method="post">
        {{ oHash.getCamposHtml|raw }}
        <table>
            <thead>
            <tr>
                <th class=titulo_inv colspan=4>{{ "Encargos de la zona"|trans|capitalize }}:&nbsp;&nbsp;&nbsp;
                    {{ oDesplZonas.desplegable|raw }}
                </th>
                <th class=titulo_inv colspan=4>{{ "Orden"|trans|capitalize }}:&nbsp;&nbsp;&nbsp;
                    {{ oDesplOrden.desplegable|raw }}
                </th>
            </tr>
            </thead>
        </table>
    </form>
</div>

<br>
<div id="div_encargos">
</div>

<script>
    fnjs_ver_encargos_zona = function () {
        let id_zona = $('#id_zona').val();
        let orden = $('#orden').val();
        if (id_zona) {
            let url = '{{ url_ver_encargos_zona }}';

            let parametros = 'id_zona=' + id_zona +  '&orden=' + orden + '{{ h_zona|raw }}';

            $.ajax({
                url: url,
                type: 'post',
                data: parametros,
                dataType: 'html'
            })
                .done(function (rta_txt) {
                    $('#div_encargos').html(rta_txt);
                });
        }
    }
</script>
