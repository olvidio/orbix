<script>

    var modal = $(".item-details-form");

    modal.keydown(function (e) {
        if (e.which == Slick.keyCode.ENTER) {
            commitCurrentEdit();
            e.stopPropagation();
            e.preventDefault();
        } else if (e.which == Slick.keyCode.ESCAPE) {
            cancelCurrentEdit();
            e.stopPropagation();
            e.preventDefault();
        }
    });

    modal.find("[data-action=save]").click(function () {
        commitCurrentEdit();
    });

    modal.find("[data-action=eliminar_encargo]").click(function () {
        eliminarCurrentEdit();
    });

    modal.find("[data-action=cancel]").click(function () {
        cancelCurrentEdit();
    });

    function cancelCurrentEdit() {
        modal.hide();
    }

    function commitCurrentEdit(cell) {
        cell = $('#cell_selected').val();
        row = $('#row_selected').val();
        let id_enc_selected = $('#id_enc_selected').val();
        let observ = $('#observ').val();
        let encargo = $('#encargo').val();
        let id_tipo_enc = $('#id_tipo_enc').val();
        let id_ubi = $('#id_ubi').val();
        let id_zona = $('#id_zona').val();
        let idioma_enc = $('#idioma_enc').val();
        let descripcion_lugar = $('#descripcion_lugar').val();

        // añadir el hash (se puede cambiar todo menos el encargo)
        parametros='id_enc=' + id_enc_selected + '&que=Modificar' + '&id_tipo_enc=' + id_tipo_enc + '&id_ubi=' + id_ubi + '&id_zona=' + id_zona + '&descripcion_lugar=' + descripcion_lugar + '&encargo=' + encargo + '&idioma_enc=' + idioma_enc + '&observ=' + observ + '{{ h_encargos_zona|raw }}';;

        // guardar cambios en DB
        var request = $.ajax({
            url: 'apps/misas/controller/update_encargos_zona.php',
            method: 'POST',
            data: parametros,
            dataType: 'json'
        });
        request.done(function (json) {
            if (json.success !== true) {
                alert("{{ "respuesta"|trans|raw }}: " + json.mensaje);
            } else {
                data[row]['encargo'] = encargo;
                nom_tipo=$('#id_tipo_enc :selected').text();
                data[row]['tipo_encargo'] = nom_tipo;
                data[row]['lugar'] = json.lugar;
                data[row]['descripcion_lugar'] = descripcion_lugar;
                var nom_idioma=$('#idioma_enc :selected').text();
                data[row]['nom_idioma'] = nom_idioma;
                data[row]['idioma_enc'] = idioma_enc;
                grid.updateRow(row);
                modal.hide();
                reset_campos_modal();
            }
        });
    }

    function eliminarCurrentEdit(cell) {
        cell = $('#cell_selected').val();
        row = $('#row_selected').val();
        var id_campo = columns[cell].field;

        let id_enc_selected = $('#id_enc_selected').val();
        parametros='id_enc=' + id_enc_selected + '&que=Borrar' + '{{ h_borrar_encargo_zona|raw }}';;

        // guardar cambios en DB
        var request = $.ajax({
            url: 'apps/misas/controller/update_encargos_zona.php',
            method: 'POST',
            data: parametros,
            dataType: 'json'
        });
        request.done(function (json) {
            if (json.success !== true) {
                alert("{{ "respuesta"|trans|raw }}: " + json.mensaje);
            } else {
                // es posible que al guardar se creen datos (tstart, tend) que hay que añadir a los metadatos
 
                grid.updateRow(row);
                modal.hide();
                reset_campos_modal();
            }
        });
    }

    function fnjs_nuevo(){
        alert('nuevo);
    }

    function reset_campos_modal() {
        $('#id_sacd').val('');
        $('#tstart').val('');
        $('#tend').val('');
        $('#observ').val('');
        $('#id_enc').val('');
    }


    function openDetails(cell) {
        const url = URL.createObjectURL(new Blob());
        $('#cell_selected').val(cell.cell);
        $('#row_selected').val(cell.row);

        let encargo = data[cell.row].encargo;
        let id_campo = columns[cell.cell].field;
        let id_tipo_enc = data[cell.row].id_tipo_enc;
        let tipo_encargo = data[cell.row].tipo_encargo;
        let observ = data[cell.row].observ;
        let id_enc = data[cell.row].id_enc;
        let idioma = data[cell.row].idioma_enc;
        let descripcion_lugar = data[cell.row].descripcion_lugar;

        $('#titulo_modal').html(encargo);
        $('#observ').val(observ);
        $('#encargo').val(encargo);
        $('#id_enc_selected').val(id_enc);
        $('#id_tipo_enc').val(id_tipo_enc);
        $('#desplegable_tipo_de_encargo').val(tipo_encargo);
        $('#descripcion_lugar').val(descripcion_lugar);
        $('#idioma_enc').val(idioma);

        modal.show();
    }

    function requiredFieldValidator(value) {
        if (value == null || value == undefined || !value.length) {
            return {valid: false, msg: "This is a required field"};
        } else {
            return {valid: true, msg: null};
        }
    }

    var grid;
    var data = {{ json_data_cuadricula|raw }};
    var columns = {{ json_columns_cuadricula|raw }};
    var options = {
        editable: false,
        enableAddRow: true,
        enableCellNavigation: true,
        asyncEditorLoading: false,
        autoEdit: false
    };


    $(function () {
        grid = new Slick.Grid("#myGrid", data, columns, options);

        grid.onClick.subscribe(function (e) {
            var cell = grid.getCellFromEvent(e);
            openDetails(cell);
            e.stopPropagation();
        });

        grid.setActiveCell(0, 0);
    })


    $('.clockpicker').clockpicker({
            placement: 'bottom',
            align: 'right',
            donetext: 'Correcto!'
        }
    );

    fnjs_generarNomEnc=function(formulario){
	var nom_tipo='';
    nom_tipo=$('#id_tipo_enc :selected').text();
	lloc=$('#id_ubi :selected').text();
    tipus=nom_tipo;
    if (lloc == '') {
    	$('#encargo').val(tipus);
    } else {
    	$('#encargo').val(tipus+' ('+lloc+')');
	}
}

</script>