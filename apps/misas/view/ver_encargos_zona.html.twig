<div style="position:relative">

    <input type=button name="nuevo" value="" _("nuevo") onclick="fnjs_nuevo();">

    <div style="width:100%;">
        <div id="myGrid" class="slick-container" style="width:100%;height:500px;"></div>
    </div>


    <div class='item-details-form' style="display: none">

        <label id="titulo_modal"></label>
        <hr/>
        <input type="hidden" id="cell_selected" value=""/>
        <input type="hidden" id="row_selected" value=""/>
        <input type="hidden" id="id_enc_selected" value=""/>

        <div class='item-details-label'>
            <label for="encargo"> {{ "Encargo"|trans|raw }}: </label>
            <input id="encargo" type="text" class="form-control" size="20" value="">&nbsp;&nbsp;&nbsp; 
		<span class=link onclick="fnjs_generarNomEnc(document.modifica)">{{ "generar" }}</span>
        </div>

        <div style="margin-top: 20px;">
            <label for="id_tipo_enc">Tipo de encargo:</label>
            {{ oDesplNoms.desplegable()|raw }}	
        </div>

        <div style="margin-top: 20px;">
            <label for="id_ubi"> {{ "Lugar"|trans|raw }}: </label>
            {{ oDesplCentros.desplegable()|raw }}
        </div>

        <div style="margin-top: 20px;">
            <label for="descripcion_lugar"> {{ "Descripción lugar"|trans|raw }}: </label>
            <input id="descripcion_lugar" type="text" class="form-control" size="20" value="">
        </div>

        <div style="margin-top: 20px;">
            <label for="observ"> {{ "Observaciones"|trans|raw }}: </label>
            <input id="observ" type="text" class="form-control" size="20" value="">
        </div>
        <div style="margin-top: 20px;">
            <label for="idioma"> {{ "Idioma"|trans|raw }}: </label>
            {{ oDesplIdiomas.desplegable()|raw }}
        </div>
        <hr/>
        <div class='item-details-form-buttons'>
            <button data-action='save' class='slick-btn slick-btn-primary'>Save</button>
            <button data-action='eliminar_encargo' class='slick-btn slick-btn-primary'>Eliminar encargo</button>
            <button data-action='cancel' class='slick-btn slick-btn-default'>Cancel</button>
        </div>
    </div>

</div>

<script src="node_modules/slickgrid/dist/browser/slick.core.js"></script>
<script src="node_modules/slickgrid/dist/browser/slick.interactions.js"></script>
