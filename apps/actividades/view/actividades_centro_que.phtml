    fnjs_ver = function () {
        pata = $('#seleccion').serialize();
        // obtener el listado de periodos
        var url = '<?= $url ?>';
        var parametros = <?= $parametros ?>;
        $.ajax({
            url: url,
            type: 'post',
            data: parametros,
            success: function (rta_txt) {
                //rta_txt=rta.responseText;
                //alert ('respuesta: '+rta_txt);
                if (rta_txt) {
                    $('#exportar').html(rta_txt);
