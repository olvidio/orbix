    fnjs_guardar = function (formulario, que) {
        var err = 0;
        if (que == "eliminar") {
            seguro = confirm("<?= _("¿Está seguro de borrar los datos económicos de esta actividad?") ?>");
            if (seguro) {
                err = 0;
            } else {
                err = 1;
            }
        }
        if (err != 1) {
            $(formulario + ' input[name="que"]').val(que);
            $(formulario).attr('action', 'programas/centro_ajax.php');
            $(formulario).one("submit", function () {
                $.ajax({
                    data: $(this).serialize(),
                    url: $(this).attr('action'),
                    type: 'post',
                    complete: function (rta) {
                        rta_txt = rta.responseText;
                        if (rta_txt != '' && rta_txt != '\n') {
                            alert(rta_txt);
                        } else {
                            $('#div_modificar').html('');
                            $('#div_modificar').width('0');
                            $('#div_modificar').height('0');
                            $('#div_modificar').removeClass('ventana');
                        }
                    }
                });
                return false;
            });
            $(formulario).trigger("submit");
            $(formulario).off();
            fnjs_ver();
        }
    }
