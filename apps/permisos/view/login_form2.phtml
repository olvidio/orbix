            });

            if (!response.ok) { // `response.ok` es true para códigos de estado 200-299
                const errorText = await response.text(); // O .json() si esperas JSON de error
                throw new Error(`HTTP error! status: ${response.status} - ${errorText}`);
            }

            const responseData = await response.text(); // O .json() si esperas JSON
            //console.log('Respuesta del servidor (éxito):', responseData);
            document.body.innerHTML = responseData;
