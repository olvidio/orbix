<script>
fnjs_ver_ficha=function(id_nom,historial){
	var filtro_sacd=$('#filtro_sacd').val();
	if (!id_nom ) { var id_nom=$('#lst_sacds').val(); }

	if (id_nom ) {
		var url='{{ url_get }}';
		var parametros='filtro_sacd='+filtro_sacd+'&id_nom='+id_nom+'&historial='+historial+'{{ h_get|raw }}';
		$.ajax({
			data: parametros,
			url: url,
			type: 'post',
			dataType: 'html',
			complete: function (rta) {
				rta_txt=rta.responseText;
				$('#ficha').html(rta_txt);
			}
		});
	}
}

fnjs_lista_sacd=function(id_nom){
	var filtro_sacd=$('#filtro_sacd').val();

    var url='{{ url_ajax }}';
	var parametros='que=get_select&filtro_sacd='+filtro_sacd+'&id_nom='+id_nom+'{{ h_lista|raw }}';
	$.ajax({
		data: parametros,
		url: url,
		type: 'post',
		dataType: 'html',
		complete: function (rta) {
			rta_txt=rta.responseText;
			$('#sacds').html(rta_txt);
		}
	});
}
fnjs_horario=function(id_enc){
	var filtro_sacd=$('#filtro_sacd').val();
	var id_nom=$('#lst_sacds').val();
    var url='{{ url_horario }}';
	var parametros='filtro_sacd='+filtro_sacd+'&id_enc='+id_enc+'&id_nom='+id_nom+'{{ h_lista|raw }}';
		$.ajax({
			data: parametros,
			url: url,
			type: 'post',
			dataType: 'html',
			complete: function (rta) {
				rta_txt=rta.responseText;
				$('#ficha').html(rta_txt);
			}
		});
}
</script>

<table>
