<script>
fnjs_ver_ficha=function(id_nom,historial){
	var filtro_sacd='n';
	if (!id_nom ) { var id_nom=$('#id_sacd').val(); }

	if (id_nom ) {
		var url='{{ url_get }}';
		var key_split=id_nom.split('#');
		id_sacd=key_split[1];
		var parametros='filtro_sacd='+filtro_sacd+'&id_nom='+id_sacd+'&historial='+historial+'{{ h_get|raw }}';
		$.ajax({
			url: url,
			type: 'post',
			data: parametros,
			dataType: 'html'
		})
		.done(function (rta_txt) {
			$('#ficha').html(rta_txt);
		});
	}
}

fnjs_lista_sacd=function(id_nom){
	var filtro_sacd='';

    var url='{{ url_ajax }}';
	var parametros='que=get_select&filtro_sacd='+filtro_sacd+'&id_nom='+id_nom+'{{ h_lista|raw }}';
	$.ajax({
		url: url,
		type: 'post',
		data: parametros,
		dataType: 'html'
	})
	.done(function (rta_txt) {
		$('#sacds').html(rta_txt);
	});
}

fnjs_horario=function(id_enc){
	var filtro_sacd='';
	var id_nom=$('#lst_sacds').val();
    var url='{{ url_horario }}';
	var parametros='filtro_sacd='+filtro_sacd+'&id_enc='+id_enc+'&id_nom='+id_nom+'{{ h_horario|raw }}';
    $.ajax({
        url: url,
        type: 'post',
        data: parametros,
        dataType: 'html'
    })
    .done(function (rta_txt) {
        $('#ficha').html(rta_txt);
    });
}
fnjs_ver_ficha();
</script>

