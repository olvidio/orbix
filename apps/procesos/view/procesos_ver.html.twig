<script>
fnjs_get_depende=function(id_campo,acc){
	var valor=$(id_campo).val();
	var url='{{ url_ajax }}';
	var parametros='que=depende&acc='+acc+'&valor_depende='+valor;
		 
	$.ajax({
		url: url,
		type: 'post',
		data: parametros,
		success: function (rta_txt) {
			//rta_txt=rta.responseText;
			//alert ('respuesta: '+rta_txt);
			if (rta_txt) {
				/* a√±adir debajo de la actividad */
				$(acc).html(rta_txt);
			}
		}
	});
}
</script>
