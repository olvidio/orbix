<script>
/* La funcion: 
 *  fnjs_actualizar_fases()
 * Est√° en:
	  procesos/view/usuario_perm_activ.html.twig 
 *
*/
fnjs_asistentes=function(){
    var url='{{ url }}';
	var isfsv=$('#isfsv_val').val();
	if (isfsv==3) {
		$('#iasistentes_val').hide();
		$('#iactividad_val').hide();
		fnjs_nom_tipo();
	} else {
		var parametros='salida=asistentes&entrada='+isfsv+'{{ h|raw }}';

		$.ajax({
			data: parametros,
			url: url,
			type: 'post',
			dataType: 'html',
			complete: function (rta) {
				rta_txt=rta.responseText;
				$('#lst_asistentes').html(rta_txt);
			}
		});
		// borrar el resto.
		$('#iasistentes_val').val(".");
		$('#iactividad_val').val(".");
		$('#inom_tipo_val').val("...");
        fnjs_actualizar_fases ();
	}
}
fnjs_actividad=function(){
    var url='{{ url }}';
	var isfsv=$('#isfsv_val').val();
	var iasistentes=$('#iasistentes_val').val();
	var parametros='salida=actividad&entrada='+isfsv+iasistentes+'{{ h|raw }}';
	$.ajax({
		data: parametros,
		url: url,
		type: 'post',
		dataType: 'html',
		complete: function (rta) {
			rta_txt=rta.responseText;
			$('#lst_actividad').html(rta_txt);
		}
	});
	// borrar el resto.
	$('#inom_tipo_val').val("...");
	fnjs_actualizar_fases ();
}
fnjs_nom_tipo=function(){
    var url='{{ url }}';
	var isfsv=$('#isfsv_val').val();
	var iasistentes=$('#iasistentes_val').val();
	var iactividad=$('#iactividad_val').val();
	var parametros='salida=nom_tipo&entrada='+isfsv+iasistentes+iactividad+'{{ h|raw }}';
	$.ajax({
		data: parametros,
		url: url,
		type: 'post',
		dataType: 'html',
		complete: function (rta) {
			rta_txt=rta.responseText;
			$('#lst_nom_tipo').html(rta_txt);
		}
	});
	fnjs_actualizar_fases ();
}
fnjs_act_id_activ=function(){
    var url='{{ url }}';
	var que=$('#que').val();
	var isfsv=$('#isfsv_val').val();
	var iasistentes=$('#iasistentes_val').val();
	var iactividad=$('#iactividad_val').val();
	var inom_tipo=$('#inom_tipo_val').val();
	var id_tipo_activ=isfsv+iasistentes+iactividad+inom_tipo;

	$('#id_tipo_activ').val(id_tipo_activ);
	fnjs_actualizar_fases ();
}

</script>
