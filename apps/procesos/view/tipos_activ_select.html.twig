<tr><td class=subtitulo>{{ "escoger el tipo de actividad"|trans|capitalize }}
	</td></tr>
	<tr>
		{{ oActividadTipo.getHtml|raw }}
	</tr>
</table>
<br>
<input type='hidden' id='id_tipo_activ' value=''>
<input type='hidden' id='que' name='que' value='proceso'>
</div>
