<script>
    fnjs_grabar = function (formulario) {
        var url = '<?= ConfigGlobal::getWeb() ?>/src/shared/infrastructure/controllers/tablaDB_update.php';
        let datos = $(formulario).serialize();
        let request = $.ajax({
            data: datos,
