        var url = '<?= $web_depende ?>';
        let request = $.ajax({
            url: url,
            type: 'post',
            data: parametros,
            dataType: 'json'
        });
        request.done(function (json) {
            if (json.success !== true) {
                alert("<?= _("respuesta") ?>" + ': ' + json.mensaje);
            } else {
                rta = JSON.parse(json.data);
                rta_txt = rta.aOpciones;
                $('#' + accion).html(rta_txt);
            }
        });
    }

    $('#datos_form').ready(function () {
        $('#datos_form .fecha').each(function (i) {
            $(this).datepicker();
        });
    });
